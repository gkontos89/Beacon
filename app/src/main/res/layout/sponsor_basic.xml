<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/sponsor_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/rewards"/>


        <TextView
            android:id="@+id/sponsor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/sponsor_image"
            android:textSize="20sp"
            android:text="hello"/>

        <TextView
            android:id="@+id/sponsor_visit_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sponsor_name"
            android:layout_marginTop="30dp"
            android:background="#62f869"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:text="@string/sponsor_interact_text"/>



    </RelativeLayout>

</android.support.v7.widget.CardView>